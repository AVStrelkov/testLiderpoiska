script(type="text/x-template")#skills-list
    ul.widgets
        li.widget__item(v-for="category in skills" :key="category.id")
            skills-row(
                :category="category"
            )
            
script(type="text/x-template")#skills-row
    .widget-row 
        .widget-row__title {{category.category}}
        ul.widget-row__list
            li.widget-row__item(v-for="skill in category.skills" :key="skill.id")
                skills-item(
                    :skill="skill"
                )
                
script(type="text/x-template")#skills-item
    .widget
        svg(viewBox="0 0 100 100").skill__circle-shape
            circle(cx="50" cy="50"  r="40").skill__circle.skill__circle-under
            circle(cx="50" cy="50"  r="40" ref="colored-circle" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle.skill__circle-above
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                stop(offset="0%" stop-color="#d0731b")
                stop(offset="110%" stop-color="#dc9322")
        .widget__title {{skill.title}}